@model List<ASI.Basecode.Services.ServiceModels.NotificationModel>

@{
    ViewData["Title"] = "Notifications";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa-solid fa-bell text-info"></i> Notifications</h2>
        <div>
            @if (ViewBag.UnreadCount != null && ViewBag.UnreadCount > 0)
            {
                <button id="markAllReadPageBtn" class="btn btn-success me-2">
                    <i class="fa-solid fa-check-double"></i> Mark All as Read
                </button>
            }
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i> Create Notification
                </a>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="list-group">
                @if (Model != null && Model.Any())
                {
                    @foreach (var notification in Model)
                    {
                        <div class="list-group-item @(notification.IsRead ? "" : "list-group-item-light border-primary")">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h5 class="mb-1">
                                        @if (!notification.IsRead)
                                        {
                                            <span class="badge bg-primary">New</span>
                                        }
                                        @notification.Message
                                    </h5>
                                    <p class="mb-1 text-muted">
                                        <i class="fa-solid fa-user"></i> @notification.UserName (@notification.UserEmail)
                                    </p>
                                    <small class="text-muted">
                                        <i class="fa-solid fa-clock"></i> @notification.Timestamp.ToString("MMM dd, yyyy hh:mm tt")
                                    </small>
                                </div>
                                <div class="btn-group" role="group">
                                    @if (!notification.IsRead)
                                    {
                                        <form asp-action="MarkAsRead" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@notification.NotificationID" />
                                            <button type="submit" class="btn btn-sm btn-success" title="Mark as Read">
                                                <i class="fa-solid fa-check"></i> Mark Read
                                            </button>
                                        </form>
                                    }
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@notification.NotificationID">
                                        <i class="fa-solid fa-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Delete Modal -->
                        <div class="modal fade" id="deleteModal-@notification.NotificationID" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Confirm Delete</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this notification?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@notification.NotificationID" />
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fa-solid fa-bell-slash fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No notifications found.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var markAllReadBtn = document.getElementById('markAllReadPageBtn');
        if (markAllReadBtn) {
            markAllReadBtn.addEventListener('click', function() {
                var userId = '@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value';
                if (!userId) return;

                var formData = new FormData();
                formData.append('userId', userId);

                fetch('@Url.Action("MarkAllAsReadAjax", "Notification")', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Reload the page to show updated notifications
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error marking notifications as read');
                });
            });
        }
    });
</script>