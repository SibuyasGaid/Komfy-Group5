@using ASI.Basecode.Services.ServiceModels
@model UserViewModel
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Register - KOZY";
}
@section styles {
    <style>
        .kozy-login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #E1D1AB 0%, #FDFBF2 50%, #E1D1AB 100%);
            position: relative;
            overflow: hidden;
            padding: 2rem;
        }

        .kozy-login-container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -10%;
            width: 400px;
            height: 400px;
            background: rgba(255, 130, 35, 0.1);
            border-radius: 50%;
            animation: float 8s ease-in-out infinite;
        }

        .kozy-login-container::after {
            content: '';
            position: absolute;
            bottom: -30%;
            right: -5%;
            width: 350px;
            height: 350px;
            background: rgba(104, 190, 178, 0.1);
            border-radius: 50%;
            animation: float 10s ease-in-out infinite reverse;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-25px) rotate(5deg); }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .kozy-login-card {
            background: white;
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            max-width: 600px;
            width: 100%;
            position: relative;
            z-index: 1;
            animation: fadeInUp 0.6s ease-out;
        }

        .kozy-login-form-section {
            padding: 3.5rem;
        }

        .kozy-form-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .kozy-form-header-logo {
            font-size: 3rem;
            font-weight: 700;
            color: #FF8223;
            margin-bottom: 0.5rem;
            letter-spacing: -1px;
        }

        .kozy-form-header-subtitle {
            color: #6B7280;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: 500;
        }

        .kozy-form-group {
            margin-bottom: 1.75rem;
        }

        .kozy-form-label {
            display: block;
            margin-bottom: 0.75rem;
            font-weight: 600;
            color: #2F3030;
            font-size: 0.875rem;
        }

        .kozy-form-input-wrapper {
            position: relative;
        }

        .kozy-form-input {
            width: 100%;
            padding: 1rem 1.25rem;
            border: 2px solid #C3C3C3;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
            color: #2F3030;
        }

        .kozy-form-input:focus {
            outline: none;
            border-color: #FF8223;
            box-shadow: 0 0 0 3px rgba(255, 130, 35, 0.1);
        }

        .kozy-form-input::placeholder {
            color: #9CA3AF;
        }

        .kozy-password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6B7280;
            transition: color 0.3s ease;
        }

        .kozy-password-toggle:hover {
            color: #FF8223;
        }

        .kozy-btn-register {
            width: 100%;
            padding: 1rem;
            background: #68BEB2;
            color: white;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(104, 190, 178, 0.3);
            margin-top: 0.5rem;
        }

        .kozy-btn-register:hover {
            background: #2A5C55;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(104, 190, 178, 0.4);
        }

        .kozy-btn-back {
            color: #2F3030;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            font-weight: 500;
            margin-top: 1.5rem;
        }

        .kozy-btn-back:hover {
            color: #FF8223;
        }

        .kozy-back-section {
            text-align: center;
        }

        @@media (max-width: 576px) {
            .kozy-login-container {
                padding: 1rem;
            }

            .kozy-login-form-section {
                padding: 2rem;
            }

            .kozy-form-header-logo {
                font-size: 2.5rem;
            }
        }
    </style>
}
<div class="kozy-login-container">
    <div class="kozy-login-card">
        <div class="kozy-login-form-section">
            <div class="kozy-form-header">
                <div class="kozy-form-header-logo">KOZY.</div>
                <div class="kozy-form-header-subtitle">Create Your Account</div>
            </div>
            
            <form method="post" action="/Account/Register">
                <div class="kozy-form-group">
                    <label class="kozy-form-label" for="userId">User ID</label>
                    <div class="kozy-form-input-wrapper">
                        <input type="text" id="userId" class="kozy-form-input"
                               asp-for="UserId" placeholder="Enter userid" />
                    </div>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                
                <div class="kozy-form-group">
                    <label class="kozy-form-label" for="name">Name</label>
                    <div class="kozy-form-input-wrapper">
                        <input type="text" id="name" class="kozy-form-input"
                               asp-for="Name" placeholder="Enter name" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="kozy-form-group">
                    <label class="kozy-form-label" for="email">Email</label>
                    <div class="kozy-form-input-wrapper">
                        <input type="email" id="email" class="kozy-form-input"
                               asp-for="Email" placeholder="Enter email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="kozy-form-group">
                    <label class="kozy-form-label" for="password">Password</label>
                    <div class="kozy-form-input-wrapper">
                        <input type="password" id="password" class="kozy-form-input"
                               asp-for="Password" placeholder="Enter password" />
                        <i class="fa-solid fa-eye-slash kozy-password-toggle"
                           onclick="togglePassword('password', this)"></i>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="kozy-form-group">
                    <label class="kozy-form-label" for="confirmpassword">Confirm Password</label>
                    <div class="kozy-form-input-wrapper">
                        <input type="password" id="confirmpassword" class="kozy-form-input"
                               asp-for="ConfirmPassword" placeholder="Confirm Password" />
                        <i class="fa-solid fa-eye-slash kozy-password-toggle"
                           onclick="togglePassword('confirmpassword', this)"></i>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <button class="kozy-btn-register" type="submit">
                    Register
                </button>
                
                <div class="kozy-back-section">
                    <a asp-controller="Account" asp-action="Login" class="kozy-btn-back">
                        <i class="fa-solid fa-arrow-left"></i> Back to Login
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts {
    <script>
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            if (typeof showNotificationToast !== 'undefined') {
                showNotificationToast(errorMessage, 'danger');
            } else if (typeof toastr !== 'undefined') {
                toastr.error(errorMessage);
            }
        }

        function togglePassword(inputId, iconElement) {
            const passwordInput = document.getElementById(inputId);
            const icon = iconElement;

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            }
        }
    </script>
}
