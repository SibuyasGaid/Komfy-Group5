@* 
    Main Layout Template
    Provides the base HTML structure, CSS/JS includes, and layout containers for all pages.
    Handles conditional rendering for authenticated vs. unauthenticated views.
*@
@using static ASI.Basecode.Resources.Views.Screen

<!DOCTYPE html>
<html lang="en">
<head>
    @* Meta Tags and Page Title *@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    @* Core CSS Framework and Stylesheets *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/kozy-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true" />
    
    @* External CSS Resources *@
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    
    @* Page-specific styles (rendered by individual views) *@
    @RenderSection("Styles", required: false)

    @* ============================================
       DARK MODE THEME STYLES
       ============================================ *@
    <style>
        :root {
            --bg-primary: #ffffff;
            --bg-secondary: #f3f4f6;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
            --border-color: #e5e7eb;
            --card-bg: #ffffff;
            --navbar-bg: #ffffff;
            --footer-bg: #f8f9fa;
        }

        html.dark-theme {
            --bg-primary: #1a1a1a;
            --bg-secondary: #2d2d2d;
            --text-primary: #e5e7eb;
            --text-secondary: #9ca3af;
            --border-color: #374151;
            --card-bg: #252525;
            --navbar-bg: #1f1f1f;
            --footer-bg: #1a1a1a;
        }

        html.dark-theme body {
            background-color: var(--bg-primary);
            color: var(--text-primary);
        }

        html.dark-theme .bg-white {
            background-color: var(--card-bg) !important;
            color: var(--text-primary);
        }

        html.dark-theme .text-gray-800,
        html.dark-theme .text-gray-700,
        html.dark-theme .text-gray-600 {
            color: var(--text-primary) !important;
        }

        html.dark-theme .text-gray-500 {
            color: var(--text-secondary) !important;
        }

        html.dark-theme .border,
        html.dark-theme .border-gray-300,
        html.dark-theme .border-gray-200 {
            border-color: var(--border-color) !important;
        }

        html.dark-theme input,
        html.dark-theme textarea,
        html.dark-theme select {
            background-color: var(--bg-secondary);
            color: var(--text-primary);
            border-color: var(--border-color);
        }

        html.dark-theme input:disabled,
        html.dark-theme textarea:disabled,
        html.dark-theme select:disabled {
            background-color: #1f1f1f;
            color: var(--text-secondary);
        }

        html.dark-theme .card {
            background-color: var(--card-bg);
            color: var(--text-primary);
            border-color: var(--border-color);
        }

        html.dark-theme .card-header {
            background-color: var(--bg-secondary);
            border-color: var(--border-color);
        }

        html.dark-theme .bg-gray-100 {
            background-color: var(--bg-secondary) !important;
        }

        html.dark-theme .bg-gray-50 {
            background-color: #2a2a2a !important;
        }

        html.dark-theme .modal-content {
            background-color: var(--card-bg);
            color: var(--text-primary);
        }

        html.dark-theme .modal-header,
        html.dark-theme .modal-footer {
            border-color: var(--border-color);
        }

        html.dark-theme .list-group-item {
            background-color: var(--card-bg);
            color: var(--text-primary);
            border-color: var(--border-color);
        }

        html.dark-theme footer {
            background-color: var(--footer-bg);
            color: var(--text-secondary);
            border-color: var(--border-color);
        }

        html.dark-theme .navbar {
            background-color: var(--navbar-bg) !important;
        }

        html.dark-theme .navbar-light .navbar-nav .nav-link {
            color: var(--text-primary) !important;
        }

        /* Kozy Components - Main Content Areas */
        html.dark-theme .kozy-main-content,
        html.dark-theme .kozy-content-wrapper {
            background-color: var(--bg-primary);
        }

        /* Kozy Components - Search and Filter Sections */
        html.dark-theme .kozy-search-section,
        html.dark-theme .kozy-filter-section-modern,
        html.dark-theme .kozy-search-section-modern {
            background-color: var(--card-bg) !important;
            border-color: var(--border-color);
        }

        html.dark-theme .kozy-search-input,
        html.dark-theme .kozy-input-modern {
            background-color: var(--bg-secondary) !important;
            color: var(--text-primary) !important;
            border-color: var(--border-color) !important;
        }

        html.dark-theme .kozy-search-input::placeholder,
        html.dark-theme .kozy-input-modern::placeholder {
            color: var(--text-secondary);
        }

        /* Kozy Components - Book Cards */
        html.dark-theme .kozy-book-card,
        html.dark-theme .kozy-book-card-modern {
            background-color: var(--card-bg) !important;
            border-color: var(--border-color);
        }

        html.dark-theme .kozy-book-title,
        html.dark-theme .kozy-book-title-modern {
            color: var(--text-primary) !important;
        }

        html.dark-theme .kozy-book-author,
        html.dark-theme .kozy-book-author-modern {
            color: var(--text-secondary) !important;
        }

        html.dark-theme .kozy-book-cover,
        html.dark-theme .kozy-book-cover-modern {
            background-color: var(--bg-secondary);
        }

        /* Kozy Components - Titles and Headers */
        html.dark-theme .kozy-dashboard-title,
        html.dark-theme .kozy-book-page-title,
        html.dark-theme .kozy-section-title,
        html.dark-theme .kozy-profile-title,
        html.dark-theme .kozy-profile-section-title {
            color: var(--text-primary) !important;
        }

        /* Kozy Components - Profile */
        html.dark-theme .kozy-profile-sidebar,
        html.dark-theme .kozy-profile-content {
            background-color: var(--card-bg) !important;
        }

        html.dark-theme .kozy-profile-name {
            color: var(--text-primary) !important;
        }

        html.dark-theme .kozy-profile-email {
            color: var(--text-secondary) !important;
        }

        html.dark-theme .kozy-profile-nav-link {
            color: var(--text-secondary) !important;
        }

        html.dark-theme .kozy-profile-nav-link:hover {
            background: rgba(255, 130, 35, 0.15) !important;
        }

        html.dark-theme .kozy-form-input {
            background-color: var(--bg-secondary) !important;
            color: var(--text-primary) !important;
            border-color: var(--border-color) !important;
        }

        html.dark-theme .kozy-form-label {
            color: var(--text-primary) !important;
        }

        html.dark-theme .kozy-form-help {
            color: var(--text-secondary) !important;
        }

        html.dark-theme .kozy-account-info {
            background-color: var(--bg-secondary) !important;
            border-left-color: #68BEB2;
        }

        html.dark-theme .kozy-account-info-title {
            color: var(--text-primary) !important;
        }

        html.dark-theme .kozy-account-info-grid {
            color: var(--text-secondary) !important;
        }

        html.dark-theme .kozy-account-info-item strong {
            color: var(--text-primary) !important;
        }

        /* Tables */
        html.dark-theme table {
            color: var(--text-primary);
        }

        html.dark-theme .table {
            color: var(--text-primary);
            border-color: var(--border-color);
        }

        html.dark-theme .table-hover tbody tr:hover {
            background-color: var(--bg-secondary);
        }

        html.dark-theme .table-dark {
            background-color: var(--bg-secondary);
            color: var(--text-primary);
        }

        html.dark-theme th,
        html.dark-theme td {
            border-color: var(--border-color) !important;
        }

        /* Text Colors */
        html.dark-theme .text-muted,
        html.dark-theme small.text-muted {
            color: var(--text-secondary) !important;
        }

        html.dark-theme h1, html.dark-theme h2, html.dark-theme h3,
        html.dark-theme h4, html.dark-theme h5, html.dark-theme h6,
        html.dark-theme p, html.dark-theme span, html.dark-theme div,
        html.dark-theme label, html.dark-theme a {
            color: inherit;
        }

        html.dark-theme .text-gray-700,
        html.dark-theme .text-gray-600 {
            color: var(--text-primary) !important;
        }

        /* Alerts */
        html.dark-theme .alert {
            border-color: var(--border-color);
        }

        html.dark-theme .alert-info {
            background-color: rgba(104, 190, 178, 0.2);
            border-color: #68BEB2;
            color: var(--text-primary);
        }

        /* Pagination */
        html.dark-theme .pagination .page-link {
            background-color: var(--card-bg);
            border-color: var(--border-color);
            color: var(--text-primary);
        }

        html.dark-theme .pagination .page-link:hover {
            background-color: var(--bg-secondary);
            border-color: var(--border-color);
        }

        html.dark-theme .pagination .page-item.active .page-link {
            background-color: #FF8223;
            border-color: #FF8223;
        }

        html.dark-theme .pagination .page-item.disabled .page-link {
            background-color: var(--bg-secondary);
            color: var(--text-secondary);
        }

        /* Dropdown Menus */
        html.dark-theme .dropdown-menu {
            background-color: var(--card-bg);
            border-color: var(--border-color);
        }

        html.dark-theme .dropdown-item {
            color: var(--text-primary);
        }

        html.dark-theme .dropdown-item:hover {
            background-color: var(--bg-secondary);
        }

        /* Forms and Form Controls */
        html.dark-theme .form-control,
        html.dark-theme .form-select {
            background-color: var(--bg-secondary);
            color: var(--text-primary);
            border-color: var(--border-color);
        }

        html.dark-theme .form-control:focus,
        html.dark-theme .form-select:focus {
            background-color: var(--bg-secondary);
            color: var(--text-primary);
            border-color: #FF8223;
        }

        html.dark-theme .form-control::placeholder {
            color: var(--text-secondary);
        }

        /* Stat Cards and Analytics */
        html.dark-theme .kozy-stat-card {
            background-color: var(--card-bg) !important;
        }

        html.dark-theme .kozy-stat-title {
            color: var(--text-primary) !important;
        }

        html.dark-theme .kozy-stat-item {
            border-bottom-color: var(--border-color) !important;
        }

        html.dark-theme .kozy-stat-item-title {
            color: var(--text-primary) !important;
        }

        html.dark-theme .kozy-stat-item-subtitle {
            color: var(--text-secondary) !important;
        }

        /* Genre Cards */
        html.dark-theme .kozy-genre-card {
            border-color: var(--border-color);
        }

        /* Background Overrides */
        html.dark-theme .bg-light,
        html.dark-theme .bg-gray-50,
        html.dark-theme .bg-gray-100 {
            background-color: var(--bg-secondary) !important;
        }

        /* Filter Info Boxes */
        html.dark-theme .bg-blue-50 {
            background-color: rgba(59, 130, 246, 0.1) !important;
        }

        html.dark-theme .border-blue-500 {
            border-color: #3b82f6 !important;
        }

        /* Theme Option Cards in Profile */
        html.dark-theme .theme-option {
            background-color: var(--card-bg) !important;
            border-color: var(--border-color) !important;
        }

        html.dark-theme .theme-option h3 {
            color: var(--text-primary) !important;
        }

        /* HR Dividers */
        html.dark-theme hr {
            border-color: var(--border-color);
            opacity: 0.5;
        }

        /* Sidebar */
        html.dark-theme .kozy-sidebar {
            background-color: var(--navbar-bg) !important;
            border-right-color: var(--border-color);
        }

        html.dark-theme .kozy-sidebar-header {
            border-bottom-color: var(--border-color);
        }

        html.dark-theme .kozy-logo {
            color: var(--text-primary) !important;
        }

        html.dark-theme .kozy-tagline {
            color: var(--text-secondary) !important;
        }

        html.dark-theme .kozy-nav-item {
            color: var(--text-secondary) !important;
        }

        html.dark-theme .kozy-nav-item:hover {
            background-color: rgba(255, 130, 35, 0.1) !important;
            color: #FF8223 !important;
        }

        html.dark-theme .kozy-nav-item.active {
            background-color: #FF8223 !important;
            color: white !important;
        }

        html.dark-theme .kozy-sidebar-user-info {
            background-color: rgba(255, 130, 35, 0.1) !important;
            border-color: rgba(255, 130, 35, 0.2) !important;
        }

        html.dark-theme .kozy-sidebar nav > div {
            border-top-color: var(--border-color) !important;
        }

        /* Header */
        html.dark-theme .kozy-header {
            background-color: var(--navbar-bg) !important;
            border-bottom-color: var(--border-color);
        }

        html.dark-theme .kozy-sidebar-toggle {
            color: var(--text-primary) !important;
        }

        html.dark-theme .kozy-user-info {
            background-color: rgba(255, 130, 35, 0.1) !important;
            border-color: rgba(255, 130, 35, 0.2) !important;
        }

        /* Book Details Card and All Detail Cards */
        html.dark-theme .kozy-book-details-card,
        html.dark-theme .kozy-details-card {
            background-color: var(--card-bg) !important;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
        }

        html.dark-theme .kozy-book-info-section h1,
        html.dark-theme .kozy-book-info-section h2,
        html.dark-theme .kozy-book-info-section h3 {
            color: var(--text-primary) !important;
        }

        html.dark-theme .kozy-book-meta {
            border-bottom-color: var(--border-color);
        }

        html.dark-theme .kozy-book-meta-item {
            color: var(--text-secondary) !important;
        }

        html.dark-theme .kozy-book-description,
        html.dark-theme .kozy-section-content {
            color: var(--text-primary) !important;
        }

        html.dark-theme .kozy-book-cover-large {
            background-color: var(--bg-secondary);
        }

        /* Badges and Labels */
        html.dark-theme .badge {
            color: white !important;
        }

        html.dark-theme .kozy-status-badge,
        html.dark-theme .kozy-badge {
            border-color: var(--border-color);
        }

        /* Review Cards */
        html.dark-theme .kozy-review-card,
        html.dark-theme .review-card {
            background-color: var(--bg-secondary) !important;
            border-color: var(--border-color);
        }

        html.dark-theme .kozy-review-header,
        html.dark-theme .kozy-review-author {
            color: var(--text-primary) !important;
        }

        html.dark-theme .kozy-review-text,
        html.dark-theme .kozy-review-content {
            color: var(--text-secondary) !important;
        }

        /* Borrowing Cards */
        html.dark-theme .kozy-borrowing-card {
            background-color: var(--card-bg) !important;
            border-color: var(--border-color);
        }

        /* Action Buttons Section */
        html.dark-theme .kozy-action-buttons,
        html.dark-theme .kozy-actions {
            border-top-color: var(--border-color);
        }

        /* Container Elements */
        html.dark-theme .kozy-book-details-container,
        html.dark-theme .kozy-container,
        html.dark-theme .container {
            color: var(--text-primary);
        }

        /* Section Headers */
        html.dark-theme .kozy-section-header,
        html.dark-theme .kozy-section-title-wrapper {
            border-bottom-color: var(--border-color);
        }

        /* Info Boxes */
        html.dark-theme .kozy-info-box,
        html.dark-theme .info-box {
            background-color: var(--bg-secondary) !important;
            border-color: var(--border-color);
        }

        /* Empty State Messages */
        html.dark-theme .kozy-empty-state,
        html.dark-theme .empty-state {
            color: var(--text-secondary) !important;
        }

        /* All Text in Dark Theme */
        html.dark-theme .kozy-text,
        html.dark-theme p:not(.text-white):not(.btn):not(.badge),
        html.dark-theme span:not(.text-white):not(.btn):not(.badge) {
            color: inherit;
        }

        /* Rating Stars - Keep Gold Color */
        html.dark-theme .kozy-star,
        html.dark-theme .fa-star {
            color: #F59E0B;
        }

        /* Specific Text Colors */
        html.dark-theme .text-gray-900,
        html.dark-theme .text-gray-800,
        html.dark-theme .text-gray-700,
        html.dark-theme .text-gray-600 {
            color: var(--text-primary) !important;
        }

        html.dark-theme .text-gray-500,
        html.dark-theme .text-gray-400 {
            color: var(--text-secondary) !important;
        }

        /* Ensure white backgrounds become dark */
        html.dark-theme [style*="background: white"],
        html.dark-theme [style*="background:white"],
        html.dark-theme [style*="background-color: white"],
        html.dark-theme [style*="background-color:white"] {
            background-color: var(--card-bg) !important;
        }

        /* Ensure hardcoded text colors adapt */
        html.dark-theme [style*="color: #2F3030"],
        html.dark-theme [style*="color:#2F3030"],
        html.dark-theme [style*="color: #1f2937"],
        html.dark-theme [style*="color:#1f2937"] {
            color: var(--text-primary) !important;
        }

        html.dark-theme [style*="color: #6B7280"],
        html.dark-theme [style*="color:#6B7280"],
        html.dark-theme [style*="color: #9ca3af"],
        html.dark-theme [style*="color:#9ca3af"] {
            color: var(--text-secondary) !important;
        }

        @* Smooth theme transition animations *@
        body, .bg-white, .card, input, textarea, select, .modal-content,
        .kozy-search-section, .kozy-book-card, .kozy-profile-sidebar,
        .kozy-profile-content, .kozy-stat-card, .table, .dropdown-menu,
        .kozy-sidebar, .kozy-header, .kozy-book-details-card, .kozy-nav-item {
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }
    </style>

    @* ============================================
       THEME INITIALIZATION
       ============================================ *@
    @* Initialize dark mode theme from cookie before page render to prevent flash *@
    <script>
        (function() {
            const theme = document.cookie.split('; ').find(row => row.startsWith('theme='));
            if (theme && theme.split('=')[1] === 'dark') {
                document.documentElement.classList.add('dark-theme');
            }
        })();
    </script>
</head>
<body class="page-load">
    @* ============================================
       HEADER RENDERING
       ============================================ *@
    @* Render header for authenticated users and non-login pages *@
    @if (ViewBag.LoginView != true && User.Identity.IsAuthenticated)
    {
        <partial name="_Header" />
    }
    else if (ViewBag.LoginView != true)
    {
        <partial name="_Header" />
    }
    
    @* ============================================
       MAIN CONTENT AREA
       ============================================ *@
    @* Render authentication pages (Login, Register) in centered container *@
    @if (ViewBag.LoginView == true)
    {
        @* Add landing-page class to auth-container when on landing page for more reliable CSS targeting *@
        var isLandingPage = ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Landing";
        <div class="auth-container @(isLandingPage ? "landing-page-container" : "")">
            @RenderBody()
        </div>
    }
    else
    {
        @* Render main application pages with sidebar layout *@
        <div class="kozy-main-content @(ViewBag.LoginView == true ? "" : "")">
            <div class="kozy-content-wrapper">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    
    @* ============================================
       LANDING PAGE STYLE OVERRIDES
       ============================================ *@
    @* Override layout wrapper styles specifically for landing page to ensure full-width display *@
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Landing")
    {
        <style>
            @* Reset auth-container styles for landing page - AGGRESSIVE OVERRIDES *@
            .auth-container.landing-page-container,
            .auth-container:has(#landing-page),
            body .auth-container.landing-page-container,
            html body .auth-container.landing-page-container {
                margin-left: 0 !important;
                max-width: 100% !important;
                padding: 0 !important;
                overflow: visible !important;
                overflow-y: visible !important;
                overflow-x: hidden !important;
                width: 100% !important;
                height: auto !important;
                min-height: auto !important;
                max-height: none !important;
                display: block !important;
                align-items: stretch !important;
                justify-content: flex-start !important;
            }
            
            @* Remove scrollbar from body and html *@
            body,
            html {
                overflow-y: visible !important;
                overflow-x: hidden !important;
                height: auto !important;
                max-height: none !important;
                padding-bottom: 0 !important;
                margin-bottom: 0 !important;
            }
            
            @* Reset main content wrapper styles for landing page *@
            .kozy-main-content,
            .kozy-content-wrapper {
                margin-left: 0 !important;
                max-width: 100% !important;
                padding: 0 !important;
                overflow: visible !important;
                overflow-y: visible !important;
                overflow-x: hidden !important;
                width: 100% !important;
                height: auto !important;
            }
            
            @* Override .main class from style.css to prevent internal scrollbars *@
            main,
            .main,
            .main-container,
            .navcontainer {
                overflow-y: visible !important;
                overflow-x: hidden !important;
                height: auto !important;
                padding: 0 !important;
                width: 100% !important;
                max-height: none !important;
            }
            
            @* Additional specific overrides for main element and .main class on landing page *@
            body:has(#landing-page) main,
            body:has(#landing-page) .main,
            .auth-container:has(#landing-page) main,
            .auth-container:has(#landing-page) .main,
            main:has(#landing-page) {
                height: auto !important;
                overflow-y: visible !important;
                overflow-x: hidden !important;
                padding: 0 !important;
                max-height: none !important;
            }
            
            @* Ensure body and html use browser scrollbar only and extend background *@
            body,
            html {
                overflow-x: hidden !important;
                overflow-y: visible !important;
                margin: 0 !important;
                padding: 0 !important;
                padding-bottom: 0 !important;
                margin-bottom: 0 !important;
                height: auto !important;
                max-height: none !important;
                background: linear-gradient(135deg, #FDFBF2 0%, #E1D1AB 50%, #FDFBF2 100%) !important;
                background-attachment: fixed !important;
            }
            
            @* Remove overflow restrictions from container elements *@
            .wrapper,
            .container-fluid,
            .container {
                overflow: visible !important;
            }
            
            @* Remove footer margin from body *@
            body {
                margin-bottom: 0 !important;
            }
