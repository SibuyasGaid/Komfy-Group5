@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Forgot Password - KOZY";
}
@section styles {
    <style>
        .kozy-login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #E1D1AB 0%, #FDFBF2 50%, #E1D1AB 100%);
            position: relative;
            overflow: hidden;
        }

        .kozy-login-container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -10%;
            width: 300px;
            height: 300px;
            background: rgba(255, 130, 35, 0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(5deg); }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .kozy-login-card {
            background: white;
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 700px;
            width: 100%;
            position: relative;
            z-index: 1;
            animation: fadeInUp 0.6s ease-out;
        }

        .kozy-login-form-section {
            padding: 4rem;
        }

        .kozy-form-group {
            margin-bottom: 1.5rem;
        }

        .kozy-form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #2F3030;
        }

        .kozy-form-input {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 2px solid #C3C3C3;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

        .kozy-form-input:focus {
            outline: none;
            border-color: #FF8223;
            box-shadow: 0 0 0 3px rgba(255, 130, 35, 0.1);
        }

        .kozy-btn-reset {
            width: 100%;
            padding: 0.875rem;
            background: #FF8223;
            color: white;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(255, 130, 35, 0.3);
        }

        .kozy-btn-reset:hover {
            background: #FFA45F;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 130, 35, 0.4);
        }

        .kozy-btn-back {
            color: #2F3030;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

        .kozy-btn-back:hover {
            color: #FF8223;
        }

        @@media (max-width: 768px) {
            .kozy-login-card {
                max-width: 550px;
            }

            .kozy-login-form-section {
                padding: 2.5rem;
            }
        }

        @@media (max-width: 576px) {
            .kozy-login-form-section {
                padding: 2rem;
            }
        }
    </style>
}
<div class="kozy-login-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6">
                <div class="kozy-login-card">
                    <div class="kozy-login-form-section">
                        <div class="text-center mb-4">
                            <div style="font-size: 3rem; font-weight: 700; color: #FF8223; margin-bottom: 0.5rem;">KOZY.</div>
                            <h4 class="mt-4 mb-3" style="color: #2F3030;">Forgot Your Password?</h4>
                            <p class="text-muted mb-4">Enter your email address and we'll send you a password reset link.</p>
                        </div>
                        
                        <form method="post" action="/Account/ForgotPassword">
                            @Html.AntiForgeryToken()

                            <div class="kozy-form-group">
                                <label class="kozy-form-label" for="email">Email Address</label>
                                <input type="email" id="email" name="email" class="kozy-form-input"
                                       placeholder="Enter your email address" required />
                            </div>

                            <button class="kozy-btn-reset mb-3" type="submit">
                                Send Reset Link
                            </button>
                            
                            <div class="text-center">
                                <a href="/" class="kozy-btn-back">
                                    <i class="fa-solid fa-arrow-left"></i> Return to Home Page
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            if (typeof showNotificationToast !== 'undefined') {
                showNotificationToast(errorMessage, 'danger');
            } else if (typeof toastr !== 'undefined') {
                toastr.error(errorMessage);
            }
        }
    </script>
}
