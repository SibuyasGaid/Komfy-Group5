@model ASI.Basecode.Services.ServiceModels.BookModel

@{
    ViewData["Title"] = "Add New Book";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Add New Book</h1>

<div class="max-w-xl mx-auto bg-white p-8 rounded-lg shadow-lg">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

        <!-- Title Field -->
        <div class="mb-4">
            <label asp-for="Title" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="Title" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Title" class="text-red-500 text-xs italic"></span>
        </div>

        <!-- BookCode Field -->
        <div class="mb-4">
            <label asp-for="BookCode" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="BookCode" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="BookCode" class="text-red-500 text-xs italic"></span>
        </div>

        <!-- Author Field -->
        <div class="mb-4">
            <label asp-for="Author" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="Author" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Author" class="text-red-500 text-xs italic"></span>
        </div>

        <!-- Genre Field -->
        <div class="mb-4">
            <label asp-for="Genre" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <select id="genreSelect" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" onchange="toggleCustomGenre()">
                <option value="">-- Select Genre --</option>
                <option value="Fiction">Fiction</option>
                <option value="Science">Science</option>
                <option value="History">History</option>
                <option value="Biography">Biography</option>
                <option value="Technology">Technology</option>
                <option value="Mystery">Mystery</option>
                <option value="Romance">Romance</option>
                <option value="Fantasy">Fantasy</option>
                <option value="Self-Help">Self-Help</option>
                <option value="Business">Business</option>
                <option value="Other">Other (Custom Genre)</option>
            </select>
            <span asp-validation-for="Genre" class="text-red-500 text-xs italic"></span>
        </div>

        <!-- Custom Genre Input (Hidden by default) -->
        <div id="customGenreDiv" class="mb-4" style="display: none;">
            <label for="customGenreInput" class="block text-gray-700 text-sm font-bold mb-2">Custom Genre</label>
            <input type="text" id="customGenreInput" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter custom genre" />
            <p class="text-gray-600 text-xs mt-1">Enter a new genre name</p>
        </div>

        <!-- Hidden field to submit the actual genre value -->
        <input type="hidden" asp-for="Genre" id="genreHiddenField" />

        <!-- Publisher Field -->
        <div class="mb-4">
            <label asp-for="Publisher" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="Publisher" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Publisher" class="text-red-500 text-xs italic"></span>
        </div>

        <!-- Published Date Field -->
        <div class="mb-4">
            <label asp-for="DatePublished" class="block text-gray-700 text-sm font-bold mb-2">Published Date</label>
            <input asp-for="DatePublished" type="date" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="DatePublished" class="text-red-500 text-xs italic"></span>
            <p class="text-gray-600 text-xs mt-1">Optional: When was this book published?</p>
        </div>

        <!-- Description/Synopsis Field -->
        <div class="mb-4">
            <label asp-for="Description" class="block text-gray-700 text-sm font-bold mb-2">Description/Synopsis</label>
            <textarea asp-for="Description" rows="5" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter a brief description or synopsis of the book..."></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-xs italic"></span>
            <p class="text-gray-600 text-xs mt-1">Maximum 2000 characters</p>
        </div>

        <!-- Stock Management Fields -->
        <div class="mb-4 grid grid-cols-2 gap-4">
            <div>
                <label asp-for="Quantity" class="block text-gray-700 text-sm font-bold mb-2">
                    <i class="fa-solid fa-boxes-stacked mr-1"></i>Total Quantity
                </label>
                <input asp-for="Quantity" type="number" min="1" max="999" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Quantity" class="text-red-500 text-xs italic"></span>
                <p class="text-gray-600 text-xs mt-1">Total number of copies in library</p>
            </div>
            <div>
                <label asp-for="AvailableQuantity" class="block text-gray-700 text-sm font-bold mb-2">
                    <i class="fa-solid fa-check-circle mr-1"></i>Available Quantity
                </label>
                <input asp-for="AvailableQuantity" type="number" min="0" max="999" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="AvailableQuantity" class="text-red-500 text-xs italic"></span>
                <p class="text-gray-600 text-xs mt-1">Copies currently available for borrowing</p>
            </div>
        </div>

        <!-- Cover Image Upload Field -->
        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2">
                <i class="fa-solid fa-image mr-1"></i>Cover Image (Optional)
            </label>
            <div class="mb-3">
                <input type="file"
                       name="CoverImage"
                       id="coverImageInput"
                       accept="image/*"
                       class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                       onchange="previewImage(event)" />
                <p class="text-gray-600 text-xs mt-1">Upload a cover image (JPG, PNG, GIF). If not provided, a default placeholder will be used.</p>
            </div>

            <!-- Image Preview -->
            <div id="imagePreview" class="mt-3 hidden">
                <label class="block text-gray-700 text-sm font-bold mb-2">Preview:</label>
                <div class="border rounded p-2 bg-gray-50 flex items-center justify-center" style="max-width: 200px; height: 280px;">
                    <img id="preview" src="" alt="Cover Preview" class="max-w-full max-h-full object-contain" />
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition duration-150 shadow-md focus:outline-none focus:shadow-outline">
                Save Book
            </button>
            <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewImage(event) {
            const preview = document.getElementById('preview');
            const previewDiv = document.getElementById('imagePreview');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    previewDiv.classList.remove('hidden');
                };
                reader.readAsDataURL(file);
            } else {
                preview.src = '';
                previewDiv.classList.add('hidden');
            }
        }

        function toggleCustomGenre() {
            const genreSelect = document.getElementById('genreSelect');
            const customGenreDiv = document.getElementById('customGenreDiv');
            const customGenreInput = document.getElementById('customGenreInput');
            const genreHiddenField = document.getElementById('genreHiddenField');

            if (genreSelect.value === 'Other') {
                customGenreDiv.style.display = 'block';
                customGenreInput.focus();
                // Don't set hidden field here - wait for user input
            } else {
                customGenreDiv.style.display = 'none';
                customGenreInput.value = '';
                genreHiddenField.value = genreSelect.value;
            }
        }

        // Update hidden field when custom genre is typed
        document.addEventListener('DOMContentLoaded', function() {
            const customGenreInput = document.getElementById('customGenreInput');
            const genreHiddenField = document.getElementById('genreHiddenField');
            const genreSelect = document.getElementById('genreSelect');

            customGenreInput.addEventListener('input', function() {
                if (genreSelect.value === 'Other') {
                    genreHiddenField.value = customGenreInput.value;
                }
            });

            genreSelect.addEventListener('change', function() {
                if (genreSelect.value !== 'Other') {
                    genreHiddenField.value = genreSelect.value;
                }
            });
        });
    </script>
}
