@model List<ASI.Basecode.Services.ServiceModels.BookModel>

@{
    ViewData["Title"] = "Book Management";
}

<div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Book Library</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition duration-150 shadow-md">
                <i class="fa-solid fa-plus mr-2"></i>Add New Book
            </a>
        }
    </div>

    <!-- Search Bar -->
    <div class="mb-6">
        <form asp-action="Index" method="get" class="flex gap-2">
            <div class="flex-1 relative">
                <input type="text"
                       name="searchTerm"
                       value="@ViewBag.SearchTerm"
                       placeholder="Search by book title or book code..."
                       class="w-full px-4 py-2 pl-10 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                <i class="fa-solid fa-search absolute left-3 top-3 text-gray-400"></i>
            </div>
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition duration-150 shadow-md">
                <i class="fa-solid fa-search mr-2"></i>Search
            </button>
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
            {
                <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition duration-150 shadow-md">
                    <i class="fa-solid fa-times mr-2"></i>Clear
                </a>
            }
        </form>
    </div>

    <!-- Filters Section -->
    <div class="mb-6 bg-white rounded-lg shadow-md p-4">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-800">
                <i class="fa-solid fa-filter mr-2"></i>Filters
            </h3>
            <button type="button" id="toggleFilters" class="text-blue-600 hover:text-blue-700 text-sm">
                <i class="fa-solid fa-chevron-down" id="filterIcon"></i>
                <span id="filterText">Show Filters</span>
            </button>
        </div>

        <div id="filterSection" style="display: none;">
            <form asp-action="Index" method="get">
                <!-- Preserve search term -->
                <input type="hidden" name="searchTerm" value="@ViewBag.SearchTerm" />

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4 mb-4">
                    <!-- Genre Filter -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Genre</label>
                        <select name="genre" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="">All Genres</option>
                            @if (ViewBag.Genres != null)
                            {
                                foreach (var genre in ViewBag.Genres)
                                {
                                    <option value="@genre" selected="@(ViewBag.SelectedGenre == genre)">@genre</option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Author Filter -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Author</label>
                        <select name="author" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="">All Authors</option>
                            @if (ViewBag.Authors != null)
                            {
                                foreach (var author in ViewBag.Authors)
                                {
                                    <option value="@author" selected="@(ViewBag.SelectedAuthor == author)">@author</option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Publisher Filter -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Publisher</label>
                        <select name="publisher" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="">All Publishers</option>
                            @if (ViewBag.Publishers != null)
                            {
                                foreach (var publisher in ViewBag.Publishers)
                                {
                                    <option value="@publisher" selected="@(ViewBag.SelectedPublisher == publisher)">@publisher</option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Year Published Filter -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Year Published</label>
                        <select name="yearPublished" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="">All Years</option>
                            @if (ViewBag.Years != null)
                            {
                                foreach (var year in ViewBag.Years)
                                {
                                    <option value="@year" selected="@(ViewBag.SelectedYear == year)">@year</option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Rating Filter -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Min. Rating</label>
                        <select name="minRating" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="">All Ratings</option>
                            <option value="4.5" selected="@(ViewBag.SelectedRating == 4.5m)">4.5+ Stars</option>
                            <option value="4.0" selected="@(ViewBag.SelectedRating == 4.0m)">4.0+ Stars</option>
                            <option value="3.5" selected="@(ViewBag.SelectedRating == 3.5m)">3.5+ Stars</option>
                            <option value="3.0" selected="@(ViewBag.SelectedRating == 3.0m)">3.0+ Stars</option>
                            <option value="2.5" selected="@(ViewBag.SelectedRating == 2.5m)">2.5+ Stars</option>
                        </select>
                    </div>
                </div>

                <div class="flex gap-2">
                    <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition duration-150 shadow-md">
                        <i class="fa-solid fa-filter mr-2"></i>Apply Filters
                    </button>
                    <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition duration-150 shadow-md inline-block">
                        <i class="fa-solid fa-times mr-2"></i>Clear All Filters
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded" role="alert">
            <p>@TempData["SuccessMessage"]</p>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded" role="alert">
            <p>@TempData["ErrorMessage"]</p>
        </div>
    }

    <!-- Search Results Info -->
    @{
        var hasActiveFilters = !string.IsNullOrEmpty(ViewBag.SearchTerm as string) ||
                              ViewBag.SelectedGenre != null ||
                              ViewBag.SelectedAuthor != null ||
                              ViewBag.SelectedPublisher != null ||
                              ViewBag.SelectedYear != null ||
                              ViewBag.SelectedRating != null;
    }
    @if (hasActiveFilters)
    {
        <div class="mb-4 bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-700 font-semibold mb-2">
                        <i class="fa-solid fa-filter mr-2"></i>Active Filters - Showing <strong>@Model.Count</strong> result(s)
                    </p>
                    <div class="flex flex-wrap gap-2">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800">
                                <i class="fa-solid fa-search mr-1"></i> @ViewBag.SearchTerm
                            </span>
                        }
                        @if (ViewBag.SelectedGenre != null)
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-purple-100 text-purple-800">
                                <i class="fa-solid fa-bookmark mr-1"></i> Genre: @ViewBag.SelectedGenre
                            </span>
                        }
                        @if (ViewBag.SelectedAuthor != null)
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-green-100 text-green-800">
                                <i class="fa-solid fa-user mr-1"></i> Author: @ViewBag.SelectedAuthor
                            </span>
                        }
                        @if (ViewBag.SelectedPublisher != null)
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-yellow-100 text-yellow-800">
                                <i class="fa-solid fa-building mr-1"></i> Publisher: @ViewBag.SelectedPublisher
                            </span>
                        }
                        @if (ViewBag.SelectedYear != null)
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-red-100 text-red-800">
                                <i class="fa-solid fa-calendar mr-1"></i> Year: @ViewBag.SelectedYear
                            </span>
                        }
                        @if (ViewBag.SelectedRating != null)
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-orange-100 text-orange-800">
                                <i class="fa-solid fa-star mr-1"></i> Rating: @ViewBag.SelectedRating+
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Books Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        @foreach (var item in Model)
        {
            <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition duration-300 overflow-hidden cursor-pointer"
                 data-toggle="modal" data-target="#bookModal-@item.BookID">
                <!-- Book Image Placeholder -->
                <div class="bg-gradient-to-br from-blue-400 to-purple-500 h-48 flex items-center justify-center">
                    <i class="fa-solid fa-book text-white text-6xl opacity-75"></i>
                </div>

                <!-- Book Info -->
                <div class="p-4">
                    <h3 class="font-bold text-lg text-gray-800 mb-2 line-clamp-2 min-h-[3.5rem]">
                        @item.Title
                    </h3>
                    <p class="text-sm text-gray-600 mb-2">
                        <i class="fa-solid fa-user mr-1"></i>@item.Author
                    </p>
                    @if (item.ReviewCount > 0)
                    {
                        <div class="text-warning text-sm mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Math.Floor(item.AverageRating))
                                {
                                    <i class="fa-solid fa-star"></i>
                                }
                                else if (i <= Math.Ceiling(item.AverageRating))
                                {
                                    <i class="fa-solid fa-star-half-stroke"></i>
                                }
                                else
                                {
                                    <i class="fa-regular fa-star"></i>
                                }
                            }
                            <span class="text-gray-600 ml-1">@item.AverageRating.ToString("0.0")</span>
                        </div>
                    }
                    <div class="flex justify-between items-center">
                        <span class="px-3 py-1 text-xs font-semibold rounded-full @(item.Status == "Available" ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                            @item.Status
                        </span>
                        <span class="text-xs text-gray-500 font-mono">@item.BookCode</span>
                    </div>
                </div>
            </div>

            <!-- Book Details Modal -->
            <div class="modal fade" id="bookModal-@item.BookID" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header bg-gradient-to-r from-blue-500 to-purple-600 text-white">
                            <h5 class="modal-title font-bold text-xl">@item.Title</h5>
                            <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <!-- Book Image -->
                                <div class="col-md-4">
                                    <div class="bg-gradient-to-br from-blue-400 to-purple-500 rounded-lg h-64 flex items-center justify-center">
                                        <i class="fa-solid fa-book text-white text-7xl opacity-75"></i>
                                    </div>
                                    <div class="mt-3 text-center">
                                        <span class="px-4 py-2 text-sm font-semibold rounded-full @(item.Status == "Available" ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                            @item.Status
                                        </span>
                                    </div>
                                </div>

                                <!-- Book Details -->
                                <div class="col-md-8">
                                    <div class="mb-3">
                                        <label class="text-sm font-semibold text-gray-600">Book Code</label>
                                        <p class="font-mono text-gray-800">@item.BookCode</p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="text-sm font-semibold text-gray-600">Author</label>
                                        <p class="text-gray-800">@item.Author</p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="text-sm font-semibold text-gray-600">Genre</label>
                                        <p class="text-gray-800">
                                            @(string.IsNullOrEmpty(item.Genre) ? "Not specified" : item.Genre)
                                        </p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="text-sm font-semibold text-gray-600">Publisher</label>
                                        <p class="text-gray-800">
                                            @(string.IsNullOrEmpty(item.Publisher) ? "Not specified" : item.Publisher)
                                        </p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="text-sm font-semibold text-gray-600">Rating</label>
                                        <div class="d-flex align-items-center">
                                            @if (item.ReviewCount > 0)
                                            {
                                                <div class="text-warning me-2">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= Math.Floor(item.AverageRating))
                                                        {
                                                            <i class="fa-solid fa-star"></i>
                                                        }
                                                        else if (i <= Math.Ceiling(item.AverageRating))
                                                        {
                                                            <i class="fa-solid fa-star-half-stroke"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="fa-regular fa-star"></i>
                                                        }
                                                    }
                                                </div>
                                                <span class="text-gray-700">@item.AverageRating.ToString("0.0") / 5.0 (@item.ReviewCount review@(item.ReviewCount != 1 ? "s" : ""))</span>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500">No reviews yet</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="text-sm font-semibold text-gray-600">Times Borrowed</label>
                                        <p class="text-gray-800">
                                            <i class="fa-solid fa-book-reader me-1"></i>
                                            @item.BorrowCount time@(item.BorrowCount != 1 ? "s" : "")
                                        </p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="text-sm font-semibold text-gray-600">Description</label>
                                        <p class="text-gray-700 text-sm leading-relaxed">
                                            @(string.IsNullOrEmpty(item.Description) ?
                                                "No description available." :
                                                item.Description)
                                        </p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="text-sm font-semibold text-gray-600">Published Date</label>
                                        <p class="text-gray-800">
                                            @(item.DatePublished.HasValue ?
                                                item.DatePublished.Value.ToString("MMMM dd, yyyy") :
                                                "Not specified")
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Review Form (Collapsible) -->
                            <div class="collapse mt-4" id="reviewForm-@item.BookID">
                                <div class="card card-body bg-light">
                                    <h6 class="font-semibold text-gray-700 mb-3">Submit Your Review</h6>
                                    <form asp-controller="Review" asp-action="Create" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="BookID" value="@item.BookID" />

                                        <!-- Star Rating -->
                                        <div class="form-group mb-3">
                                            <label class="text-sm font-semibold text-gray-600">Rating <span class="text-red-500">*</span></label>
                                            <div class="star-rating">
                                                <input type="radio" id="star5-@item.BookID" name="Rating" value="5" required />
                                                <label for="star5-@item.BookID" title="5 stars">
                                                    <i class="fa-solid fa-star"></i>
                                                </label>

                                                <input type="radio" id="star4-@item.BookID" name="Rating" value="4" />
                                                <label for="star4-@item.BookID" title="4 stars">
                                                    <i class="fa-solid fa-star"></i>
                                                </label>

                                                <input type="radio" id="star3-@item.BookID" name="Rating" value="3" />
                                                <label for="star3-@item.BookID" title="3 stars">
                                                    <i class="fa-solid fa-star"></i>
                                                </label>

                                                <input type="radio" id="star2-@item.BookID" name="Rating" value="2" />
                                                <label for="star2-@item.BookID" title="2 stars">
                                                    <i class="fa-solid fa-star"></i>
                                                </label>

                                                <input type="radio" id="star1-@item.BookID" name="Rating" value="1" />
                                                <label for="star1-@item.BookID" title="1 star">
                                                    <i class="fa-solid fa-star"></i>
                                                </label>
                                            </div>
                                        </div>

                                        <!-- Comment (Optional) -->
                                        <div class="form-group mb-3">
                                            <label class="text-sm font-semibold text-gray-600">Your Review (Optional)</label>
                                            <textarea name="Comment" rows="4" class="form-control" placeholder="Share your thoughts about this book..." maxlength="1000"></textarea>
                                            <small class="text-gray-500">Maximum 1000 characters</small>
                                        </div>

                                        <!-- Submit Button -->
                                        <div class="text-right">
                                            <button type="submit" class="btn btn-warning">
                                                <i class="fa-solid fa-paper-plane mr-2"></i>Submit Review
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <!-- Borrow Form (Collapsible) -->
                            <div class="collapse mt-4" id="borrowForm-@item.BookID">
                                <div class="card card-body bg-light">
                                    <h6 class="font-semibold text-gray-700 mb-3">Borrow This Book</h6>
                                    <form asp-controller="Borrowing" asp-action="BorrowBook" asp-route-bookId="@item.BookID" method="post">
                                        @Html.AntiForgeryToken()

                                        <!-- Borrow Date -->
                                        <div class="form-group mb-3">
                                            <label class="text-sm font-semibold text-gray-600">Select Borrow Date <span class="text-red-500">*</span></label>
                                            <input type="date"
                                                   name="borrowDate"
                                                   class="form-control"
                                                   value="@DateTime.Now.ToString("yyyy-MM-dd")"
                                                   min="@DateTime.Now.ToString("yyyy-MM-dd")"
                                                   required />
                                            <small class="text-gray-500">You can borrow the book today or reserve it for a future date. Return date will be 2 weeks from the selected date.</small>
                                        </div>

                                        <!-- Submit Button -->
                                        <div class="text-right">
                                            <button type="submit" class="btn btn-success">
                                                <i class="fa-solid fa-book-reader mr-2"></i>Confirm Borrow
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <!-- Reviews Section -->
                            @{
                                var allReviews = ViewBag.AllReviews as Dictionary<int, List<ASI.Basecode.Services.ServiceModels.ReviewModel>>;
                                var bookReviews = allReviews != null && allReviews.ContainsKey(item.BookID) ? allReviews[item.BookID] : new List<ASI.Basecode.Services.ServiceModels.ReviewModel>();
                            }
                            @if (bookReviews.Any())
                            {
                                <div class="mt-4">
                                    <h6 class="font-semibold text-gray-700 mb-3">
                                        <i class="fa-solid fa-comments"></i> Reviews (@bookReviews.Count)
                                    </h6>
                                    <div style="max-height: 400px; overflow-y: auto;">
                                        @foreach (var review in bookReviews.OrderByDescending(r => r.ReviewDate))
                                        {
                                            <div class="card mb-3">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <div>
                                                            <strong class="text-gray-800">@review.UserName</strong>
                                                            <div class="text-warning">
                                                                @for (int i = 1; i <= 5; i++)
                                                                {
                                                                    if (i <= review.Rating)
                                                                    {
                                                                        <i class="fa-solid fa-star"></i>
                                                                    }
                                                                    else
                                                                    {
                                                                        <i class="fa-regular fa-star"></i>
                                                                    }
                                                                }
                                                            </div>
                                                        </div>
                                                        <small class="text-muted">@review.ReviewDate.ToString("MMM dd, yyyy")</small>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(review.Comment))
                                                    {
                                                        <p class="text-gray-700 mb-0">@review.Comment</p>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="modal-footer">
                            <!-- Borrowing History Button -->
                            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#borrowingHistoryModal-@item.BookID">
                                <i class="fa-solid fa-history mr-2"></i>Borrowing History
                            </button>

                            <!-- Review Button/Form -->
                            <button type="button" class="btn btn-warning" data-toggle="collapse" data-target="#reviewForm-@item.BookID">
                                <i class="fa-solid fa-star mr-2"></i>Write a Review
                            </button>

                            @if (item.Status == "Available")
                            {
                                <button type="button" class="btn btn-success" data-toggle="collapse" data-target="#borrowForm-@item.BookID">
                                    <i class="fa-solid fa-book-reader mr-2"></i>Borrow Book
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-secondary" disabled>
                                    <i class="fa-solid fa-ban mr-2"></i>Currently Unavailable
                                </button>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.BookID" class="btn btn-primary">
                                    <i class="fa-solid fa-edit mr-2"></i>Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.BookID" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fa-solid fa-trash mr-2"></i>Delete
                                    </button>
                                </form>
                            }

                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Borrowing History Modal -->
            <div class="modal fade" id="borrowingHistoryModal-@item.BookID" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header bg-info text-white">
                            <h5 class="modal-title">
                                <i class="fa-solid fa-history mr-2"></i>Borrowing History - @item.Title
                            </h5>
                            <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            @{
                                var allBorrowings = ViewBag.AllBorrowings as Dictionary<int, List<ASI.Basecode.Services.ServiceModels.BorrowingModel>>;
                                var bookBorrowings = allBorrowings != null && allBorrowings.ContainsKey(item.BookID) ? allBorrowings[item.BookID] : new List<ASI.Basecode.Services.ServiceModels.BorrowingModel>();
                            }

                            @if (bookBorrowings.Any())
                            {
                                <div class="mb-3">
                                    <p class="text-muted">
                                        <i class="fa-solid fa-info-circle mr-2"></i>
                                        This book has been borrowed <strong>@bookBorrowings.Count</strong> time(s)
                                    </p>
                                </div>

                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="bg-light">
                                            <tr>
                                                <th>Borrower</th>
                                                <th>Borrow Date</th>
                                                <th>Due Date</th>
                                                <th>Return Date</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var borrowing in bookBorrowings.OrderByDescending(b => b.BorrowDate))
                                            {
                                                <tr>
                                                    <td>
                                                        <i class="fa-solid fa-user mr-1 text-primary"></i>
                                                        <strong>@borrowing.UserName</strong>
                                                        <br />
                                                        <small class="text-muted">@borrowing.UserEmail</small>
                                                    </td>
                                                    <td>
                                                        <i class="fa-solid fa-calendar mr-1"></i>
                                                        @borrowing.BorrowDate.ToString("MMM dd, yyyy")
                                                    </td>
                                                    <td>
                                                        <i class="fa-solid fa-calendar-check mr-1"></i>
                                                        @borrowing.DueDate.ToString("MMM dd, yyyy")
                                                    </td>
                                                    <td>
                                                        @if (borrowing.ReturnDate.HasValue)
                                                        {
                                                            <i class="fa-solid fa-calendar-check mr-1 text-success"></i>
                                                            @borrowing.ReturnDate.Value.ToString("MMM dd, yyyy")
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">Not returned yet</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (borrowing.Status == "Returned")
                                                        {
                                                            <span class="badge bg-success">
                                                                <i class="fa-solid fa-check mr-1"></i>Returned
                                                            </span>
                                                        }
                                                        else if (borrowing.Status == "Cancelled")
                                                        {
                                                            <span class="badge bg-warning">
                                                                <i class="fa-solid fa-ban mr-1"></i>Cancelled
                                                            </span>
                                                        }
                                                        else if (borrowing.Status == "Overdue")
                                                        {
                                                            <span class="badge bg-danger">
                                                                <i class="fa-solid fa-exclamation-triangle mr-1"></i>Overdue
                                                            </span>
                                                        }
                                                        else if (borrowing.BorrowDate.Date > DateTime.Now.Date)
                                                        {
                                                            <span class="badge bg-info">
                                                                <i class="fa-solid fa-clock mr-1"></i>Reserved
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-primary">
                                                                <i class="fa-solid fa-book-open mr-1"></i>Active
                                                            </span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fa-solid fa-book text-gray-400" style="font-size: 64px;"></i>
                                    <p class="text-muted mt-3">This book has never been borrowed.</p>
                                </div>
                            }
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-12">
            <i class="fa-solid fa-book-open text-gray-300 text-6xl mb-4"></i>
            <p class="text-gray-500 text-lg">No books available yet.</p>
            <a asp-action="Create" class="mt-4 inline-block bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition">
                Add Your First Book
            </a>
        </div>
    }
</div>

<style>
    /* Star Rating Styles */
    .star-rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
        gap: 5px;
    }

    .star-rating input[type="radio"] {
        display: none;
    }

    .star-rating label {
        cursor: pointer;
        font-size: 2rem;
        color: #ddd;
        transition: color 0.2s;
    }

    .star-rating label:hover,
    .star-rating label:hover ~ label,
    .star-rating input[type="radio"]:checked ~ label {
        color: #ffc107;
    }

    .star-rating input[type="radio"]:checked + label {
        color: #ffc107;
    }
</style>

<script>
    // Filter toggle functionality
    document.getElementById('toggleFilters').addEventListener('click', function() {
        var filterSection = document.getElementById('filterSection');
        var filterIcon = document.getElementById('filterIcon');
        var filterText = document.getElementById('filterText');

        if (filterSection.style.display === 'none') {
            filterSection.style.display = 'block';
            filterIcon.classList.remove('fa-chevron-down');
            filterIcon.classList.add('fa-chevron-up');
            filterText.textContent = 'Hide Filters';
        } else {
            filterSection.style.display = 'none';
            filterIcon.classList.remove('fa-chevron-up');
            filterIcon.classList.add('fa-chevron-down');
            filterText.textContent = 'Show Filters';
        }
    });

    // Auto-expand filters if any filter is active
    @if (ViewBag.SelectedGenre != null || ViewBag.SelectedAuthor != null || ViewBag.SelectedPublisher != null || ViewBag.SelectedYear != null || ViewBag.SelectedRating != null)
    {
        <text>
        document.getElementById('filterSection').style.display = 'block';
        document.getElementById('filterIcon').classList.remove('fa-chevron-down');
        document.getElementById('filterIcon').classList.add('fa-chevron-up');
        document.getElementById('filterText').textContent = 'Hide Filters';
        </text>
    }
</script>
