@model List<ASI.Basecode.Services.ServiceModels.ReviewModel>

@{
    ViewData["Title"] = "Reviews";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa-solid fa-star text-warning"></i> Book Reviews</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Book ID</th>
                            <th>User</th>
                            <th>Book</th>
                            <th>Rating</th>
                            <th>Comment</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var review in Model)
                            {
                                <tr>
                                    <td>@review.BookID</td>
                                    <td>@review.UserName</td>
                                    <td>@review.BookTitle</td>
                                    <td>
                                        @for (int i = 0; i < review.Rating; i++)
                                        {
                                            <i class="fa-solid fa-star text-warning"></i>
                                        }
                                        @for (int i = review.Rating; i < 5; i++)
                                        {
                                            <i class="fa-regular fa-star text-muted"></i>
                                        }
                                    </td>
                                    <td>@(review.Comment?.Length > 50 ? review.Comment.Substring(0, 50) + "..." : review.Comment)</td>
                                    <td>@review.ReviewDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@review.ReviewID" class="btn btn-sm btn-warning">
                                                <i class="fa-solid fa-edit"></i> Edit
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@review.ReviewID" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this review for \'@review.BookTitle\'? This action cannot be undone.');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="fa-solid fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">No reviews found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>