@* 
    Header Partial View
    Contains sidebar navigation and top header bar for authenticated users.
    Displays user information, navigation links, and notification controls.
*@
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    // Get current controller and action for active navigation highlighting
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

@* Render sidebar and header only for authenticated users (exclude login/register pages) *@
@if (ViewBag.LoginView != true && User.Identity.IsAuthenticated)
{
    @* ============================================
       SIDEBAR NAVIGATION
       ============================================ *@
    <aside class="kozy-sidebar">
        @* Sidebar Header: Brand Logo and Tagline *@
        <div class="kozy-sidebar-header">
            <div class="kozy-logo">KOZY.</div>
            <div class="kozy-tagline">A LIBRARY SORTING SYSTEM</div>
        </div>
        
        @* Main Navigation Menu *@
        <nav class="kozy-nav">
            @* Dashboard Navigation Link *@
            <a asp-action="Index" asp-controller="Home" 
               class="kozy-nav-item @(currentController == "Home" && currentAction == "Index" ? "active" : "")">
                <i class="fa-solid fa-house"></i>
                <span>Dashboard</span>
            </a>
            
            @* Admin-only: Analytics/Reports Navigation Link *@
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Index" asp-controller="Reports" 
                   class="kozy-nav-item @(currentController == "Reports" || currentController == "Reporting" ? "active" : "")">
                    <i class="fa-solid fa-chart-line"></i>
                    <span>View Analytics</span>
                </a>
            }
            
            @* Book Catalog Navigation Link *@
            <a asp-action="Index" asp-controller="Book" 
               class="kozy-nav-item @(currentController == "Book" ? "active" : "")">
                <i class="fa-solid fa-book"></i>
                <span>Catalog</span>
            </a>
            
            @* My Library (Borrowings) Navigation Link *@
            <a asp-action="Index" asp-controller="Borrowing" 
               class="kozy-nav-item @(currentController == "Borrowing" ? "active" : "")">
                <i class="fa-solid fa-book-open-reader"></i>
                <span>My Library</span>
            </a>
            
            @* Reviews Navigation Link *@
            <a asp-action="Index" asp-controller="Review"
               class="kozy-nav-item @(currentController == "Review" ? "active" : "")">
                <i class="fa-solid fa-star"></i>
                <span>Reviews</span>
            </a>

            @* Notifications Navigation Link *@
            <a asp-action="Index" asp-controller="Notification"
               class="kozy-nav-item @(currentController == "Notification" ? "active" : "")">
                <i class="fa-solid fa-bell"></i>
                <span>Notifications</span>
            </a>

            @* Admin-only: User Management Navigation Link *@
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Index" asp-controller="User"
                   class="kozy-nav-item @(currentController == "User" ? "active" : "")">
                    <i class="fa-solid fa-users"></i>
                    <span>Users</span>
                </a>
            }
            
            @* User Profile Navigation Link *@
            <a asp-action="Index" asp-controller="Profile" 
               class="kozy-nav-item @(currentController == "Profile" ? "active" : "")">
                <i class="fa-solid fa-user-circle"></i>
                <span>Profile</span>
            </a>
            
            @* Sidebar Footer Section: User Info and Logout *@
            <div style="margin-top: auto; padding-top: 2rem; border-top: 1px solid var(--kozy-border);">
                @* Retrieve user information from session or identity *@
                @{
                    var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName") ?? User.Identity?.Name ?? "User";
                    var userRole = User.IsInRole("Admin") ? "Admin" : "User";
                    var roleBadgeColor = User.IsInRole("Admin") ? "#FF8223" : "#68BEB2";
                    var userInitial = !string.IsNullOrEmpty(userName) ? userName.Substring(0, 1).ToUpper() : "U";
                }
                
                @* User Information Display Card *@
                <div class="kozy-sidebar-user-info" style="display: flex; align-items: center; gap: 0.75rem; padding: 1rem; margin-bottom: 1rem; background: rgba(255, 130, 35, 0.05); border-radius: 12px; border: 1px solid rgba(255, 130, 35, 0.1);">
                    @* User Avatar Badge with Initial *@
                    <div style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, @roleBadgeColor 0%, @(User.IsInRole("Admin") ? "#FFA45F" : "#2A5C55") 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; font-size: 0.9rem; flex-shrink: 0;">
                        @userInitial
                    </div>
                    @* User Name and Role Display *@
                    <div style="flex: 1; min-width: 0;">
                        <div style="font-weight: 600; color: var(--kozy-text-primary); font-size: 0.95rem; line-height: 1.2; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@userName</div>
                        <div style="font-size: 0.75rem; color: #6B7280; text-transform: uppercase; letter-spacing: 0.5px; line-height: 1.2;">@userRole</div>
                    </div>
                </div>
                
                @* Logout Button *@
                <a asp-action="Logout" asp-controller="Account" class="kozy-nav-item" style="color: #EF4444;">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span>Logout</span>
                </a>
            </div>
        </nav>
    </aside>

    @* ============================================
       TOP HEADER BAR
       ============================================ *@
    <header class="kozy-header">
        @* Sidebar Toggle Button (Mobile/Desktop) *@
        <button class="kozy-sidebar-toggle" type="button" aria-label="Toggle sidebar">
            <i class="fa-solid fa-bars"></i>
        </button>
        
        @* Header Actions: User Menu *@
        <div class="kozy-header-actions" style="display: flex; align-items: center; gap: 0.75rem; flex-shrink: 0; margin-left: auto;">
            @* User Menu Dropdown *@
            <div class="dropdown" style="flex-shrink: 0;">
                <button class="btn btn-link dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" 
                        aria-expanded="false" style="text-decoration: none; color: var(--kozy-text-primary); border: none; padding: 0.5rem;">
                    <i class="fa-solid fa-ellipsis-v" style="font-size: 1.25rem;"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li>
                        <a class="dropdown-item" asp-action="Index" asp-controller="Profile">
                            <i class="fa-solid fa-user-circle me-2"></i>Profile
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-action="Index" asp-controller="UserSetting">
                            <i class="fa-solid fa-gear me-2"></i>Settings
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item text-danger" asp-action="Logout" asp-controller="Account">
                            <i class="fa-solid fa-right-from-bracket me-2"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
}

@* ============================================
   NOTIFICATION SYSTEM
   ============================================ *@
@* Toast notification container for displaying temporary messages *@
<div id="notificationToastContainer" style="position: fixed; top: 70px; right: 20px; z-index: 9999; max-width: 400px;"></div>

<script>
    @* 
        Notification Badge Management
        Fetches and displays the count of unread notifications for the current user.
        Updates the badge icon in the header with the unread count.
    *@
    function updateNotificationBadge() {
        @if (User.Identity.IsAuthenticated)
        {
            @:var userId = '@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value';
            @:if (userId) {
                @:fetch('/Notification/GetUnreadCount?userId=' + userId)
                    @:.then(response => response.json())
                    @:.then(data => {
                        @:var badge = document.getElementById('notificationBadge');
                        @:if (badge && data.count > 0) {
                            @:badge.textContent = data.count;
                            @:badge.style.display = 'inline-block';
                        @:} else if (badge) {
                            @:badge.style.display = 'none';
                        @:}
                    @:})
                    @:.catch(error => console.error('Error fetching notification count:', error));
            @:}
        }
    }

    @* 
        Notification Toast Display
        Creates and displays a temporary toast notification message.
        Supports multiple types: success, warning, danger, and info.
        Automatically removes the toast after 5 seconds.
    *@
    function showNotificationToast(message, type = 'info') {
        if (typeof KozyUI !== 'undefined' && KozyUI.showToast) {
            KozyUI.showToast(message, type);
        } else {
            var container = document.getElementById('notificationToastContainer');
            if (!container) return;

            var toast = document.createElement('div');
            toast.className = 'alert alert-dismissible fade show shadow-lg mb-2';
            toast.style.animation = 'slideInRight 0.3s ease-out';

            var iconClass = 'fa-info-circle';
            var alertClass = 'alert-info';

            if (type === 'success') {
                alertClass = 'alert-success';
                iconClass = 'fa-check-circle';
            } else if (type === 'warning') {
                alertClass = 'alert-warning';
                iconClass = 'fa-exclamation-triangle';
            } else if (type === 'danger') {
                alertClass = 'alert-danger';
                iconClass = 'fa-exclamation-circle';
            }

            toast.classList.add(alertClass);
            toast.innerHTML = `
                <div class="d-flex align-items-center">
                    <i class="fa-solid ${iconClass} me-2"></i>
                    <div class="flex-grow-1">${message}</div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;

            container.appendChild(toast);

            setTimeout(function() {
                toast.style.animation = 'slideOutRight 0.3s ease-in';
                setTimeout(function() {
                    toast.remove();
                }, 300);
            }, 5000);

            updateNotificationBadge();
        }
    }

    @* 
        Notification Polling and Session Management
        Periodically checks for new notifications and refreshes user session to prevent automatic logouts.
    *@
    @if (User.Identity.IsAuthenticated)
    {
        @* Poll for new notifications every 30 seconds *@
        @:setInterval(updateNotificationBadge, 30000);
        @:document.addEventListener('DOMContentLoaded', function() {
            @:updateNotificationBadge();
        @:});
        
        @* Session refresh mechanism to prevent automatic logouts *@
        @:function refreshSession() {
            @:fetch('/Home/Index', { method: 'HEAD', credentials: 'include' })
            @:    .catch(error => console.error('Session refresh error:', error));
        @:}
        @* Refresh session every 30 minutes (half of 120 minute expiration time) *@
        @:setInterval(refreshSession, 1800000);
        @* Refresh session on user activity (mouse, keyboard, scroll, touch) *@
        @:let activityTimeout;
        @:['mousedown', 'keydown', 'scroll', 'touchstart'].forEach(event => {
            @:document.addEventListener(event, function() {
            @:    clearTimeout(activityTimeout);
            @:    activityTimeout = setTimeout(refreshSession, 300000); // Refresh after 5 minutes of activity
            @:}, { passive: true });
        @:});
    }
</script>

@* ============================================
   HEADER STYLES
   ============================================ *@
<style>
    @* Mobile overlay for sidebar backdrop on small screens *@
    .kozy-mobile-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 999;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .kozy-mobile-overlay.active {
        display: block;
        opacity: 1;
    }

    @* Sidebar toggle button styling *@
    .kozy-sidebar-toggle {
        background: none;
        border: none;
        font-size: 1.5rem;
        color: var(--kozy-text-primary);
        cursor: pointer;
        padding: 0.5rem;
        transition: all var(--kozy-transition-base);
    }

    .kozy-sidebar-toggle:hover {
        color: var(--kozy-primary);
    }

    @* Header icon styling (notification bell, etc.) *@
    .kozy-header-icon {
        transition: all var(--kozy-transition-base);
    }

    .kozy-header-icon:hover {
        color: var(--kozy-primary) !important;
        transform: scale(1.1);
    }

    @* User info card styling (legacy - kept for compatibility) *@
    .kozy-user-info {
        padding: 0.5rem 1rem;
        background: rgba(255, 130, 35, 0.05);
        border-radius: 12px;
        border: 1px solid rgba(255, 130, 35, 0.1);
        transition: all 0.3s ease;
        min-width: fit-content;
        display: flex !important;
        visibility: visible !important;
        opacity: 1 !important;
        z-index: 101;
    }

    .kozy-user-info:hover {
        background: rgba(255, 130, 35, 0.1);
        border-color: rgba(255, 130, 35, 0.2);
    }
    
    @* Header actions container styling *@
    .kozy-header-actions {
        display: flex !important;
        align-items: center !important;
        gap: 1rem !important;
        flex-shrink: 0 !important;
        visibility: visible !important;
        opacity: 1 !important;
    }

    @* Sidebar user info card styling *@
    .kozy-sidebar-user-info {
        transition: all 0.3s ease;
    }

    .kozy-sidebar-user-info:hover {
        background: rgba(255, 130, 35, 0.1) !important;
        border-color: rgba(255, 130, 35, 0.2) !important;
    }

    @* Mobile responsive styles *@
    @@media (max-width: 768px) {
        .kozy-sidebar {
            transform: translateX(-100%);
        }
        
        .kozy-sidebar.mobile-open {
            transform: translateX(0);
        }
    }
</style>
