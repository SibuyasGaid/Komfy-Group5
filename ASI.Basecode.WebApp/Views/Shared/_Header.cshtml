        <div class="container-fluid">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                <img src="~/img/asi-logo-invert.svg" style="width: 150px;" alt="Komfy Library">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">
                            <i class="fa-solid fa-house"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Book">
                            <i class="fa-solid fa-book"></i> Books
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Borrowing">
                            <i class="fa-solid fa-book-open-reader"></i> Borrowings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Review">
                            <i class="fa-solid fa-star"></i> Reviews
                        </a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="User">
                                <i class="fa-solid fa-users"></i> Users
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link position-relative" asp-action="Index" asp-controller="Notification">
                            <i class="fa-solid fa-bell"></i> Notifications
                            <span id="notificationBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none;">
                                0
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Profile">
                            <i class="fa-solid fa-user-circle"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-action="Logout" asp-controller="Account">
                            <i class="fa-solid fa-right-from-bracket"></i> Logout
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-user"></i> @(HttpContextAccessor.HttpContext.Session.GetString("UserName") ?? "User")
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Profile">
                                    <i class="fa-solid fa-user-circle"></i> My Profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="Index" asp-controller="UserSetting">
                                    <i class="fa-solid fa-gear"></i> Settings
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" asp-action="Logout" asp-controller="Account">
                                    <i class="fa-solid fa-right-from-bracket"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Notification Toast Container -->
<div id="notificationToastContainer" style="position: fixed; top: 70px; right: 20px; z-index: 9999; max-width: 400px;">
</div>

<script>
    // Function to update notification badge count
    function updateNotificationBadge() {
        @if (User.Identity.IsAuthenticated)
        {
            @:var userId = '@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value';
            @:if (userId) {
                @:fetch('/Notification/GetUnreadCount?userId=' + userId)
                    @:.then(response => response.json())
                    @:.then(data => {
                        @:var badge = document.getElementById('notificationBadge');
                        @:if (data.count > 0) {
                            @:badge.textContent = data.count;
                            @:badge.style.display = 'inline-block';
                        @:} else {
                            @:badge.style.display = 'none';
                        @:}
                    @:})
                    @:.catch(error => console.error('Error fetching notification count:', error));
            @:}
        }
    }

    // Function to show notification toast
    function showNotificationToast(message, type = 'info') {
        var container = document.getElementById('notificationToastContainer');

        // Create toast element
        var toast = document.createElement('div');
        toast.className = 'alert alert-dismissible fade show shadow-lg mb-2';

        // Set color based on type
        var iconClass = 'fa-info-circle';
        var alertClass = 'alert-info';

        if (type === 'success') {
            alertClass = 'alert-success';
            iconClass = 'fa-check-circle';
        } else if (type === 'warning') {
            alertClass = 'alert-warning';
            iconClass = 'fa-exclamation-triangle';
        } else if (type === 'danger') {
            alertClass = 'alert-danger';
            iconClass = 'fa-exclamation-circle';
        }

        toast.classList.add(alertClass);
        toast.style.animation = 'slideInRight 0.3s ease-out';

        toast.innerHTML = `
            <div class="d-flex align-items-center">
                <i class="fa-solid ${iconClass} me-2"></i>
                <div class="flex-grow-1">${message}</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        `;

        container.appendChild(toast);

        // Auto-dismiss after 5 seconds
        setTimeout(function() {
            toast.style.animation = 'slideOutRight 0.3s ease-in';
            setTimeout(function() {
                toast.remove();
            }, 300);
        }, 5000);

        // Update badge count
        updateNotificationBadge();
    }

    // Poll for new notifications every 30 seconds
    setInterval(updateNotificationBadge, 30000);

    // Initial load
    document.addEventListener('DOMContentLoaded', function() {
        updateNotificationBadge();
    });
</script>

<style>
    @@keyframes slideInRight {
        from {
            transform: translateX(400px);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @@keyframes slideOutRight {
        from {
            transform: translateX(0);
            opacity: 1;
        }
        to {
            transform: translateX(400px);
            opacity: 0;
        }
    }

    #notificationBadge {
        font-size: 0.65rem;
        padding: 0.25em 0.5em;
    }
</style>
