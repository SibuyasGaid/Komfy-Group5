@model List<ASI.Basecode.Services.ServiceModels.BorrowingModel>

@{
    ViewData["Title"] = "Borrowings";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa-solid fa-book-open-reader"></i> Borrowing Management</h2>
        <div>
            <a asp-action="Active" class="btn btn-success me-2">
                <i class="fa-solid fa-check-circle"></i> Active Borrowings
            </a>
            <a asp-action="Overdue" class="btn btn-danger">
                <i class="fa-solid fa-exclamation-triangle"></i> Overdue
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Book</th>
                            <th>Borrow Date</th>
                            <th>Due Date</th>
                            <th>Return Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var borrowing in Model)
                            {
                                var statusBadge = borrowing.Status switch
                                {
                                    "Active" => "bg-success",
                                    "Returned" => "bg-secondary",
                                    "Overdue" => "bg-danger",
                                    "Cancelled" => "bg-warning",
                                    _ => "bg-primary"
                                };
                                <tr>
                                    <td>@borrowing.BorrowingID</td>
                                    <td>
                                        @borrowing.UserName<br/>
                                        <small class="text-muted">@borrowing.UserEmail</small>
                                    </td>
                                    <td>
                                        @borrowing.BookTitle<br/>
                                        <small class="text-muted">Code: @borrowing.BookCode</small>
                                    </td>
                                    <td>
                                        @borrowing.BorrowDate.ToString("MMM dd, yyyy")
                                        @if (borrowing.BorrowDate.Date > DateTime.Now.Date)
                                        {
                                            <br/><span class="badge bg-info text-white">Reserved</span>
                                        }
                                    </td>
                                    <td>@borrowing.DueDate.ToString("MMM dd, yyyy")</td>
                                    <td>@(borrowing.ReturnDate?.ToString("MMM dd, yyyy") ?? "Not returned")</td>
                                    <td><span class="badge @statusBadge">@borrowing.Status</span></td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @if (borrowing.Status != "Cancelled" && borrowing.BorrowDate.Date > DateTime.Now.Date)
                                            {
                                                <!-- Cancel Reservation button for future reservations (not already cancelled) -->
                                                <form asp-action="CancelReservation" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to cancel this reservation?');">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@borrowing.BorrowingID" />
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Cancel Reservation">
                                                        <i class="fa-solid fa-times"></i> Cancel
                                                    </button>
                                                </form>
                                            }
                                            else if (borrowing.Status == "Active" || borrowing.Status == "Overdue")
                                            {
                                                <form asp-action="Return" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@borrowing.BorrowingID" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Return Book">
                                                        <i class="fa-solid fa-check"></i> Return
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">No borrowings found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    // Show popup notifications for TempData messages
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
        if (typeof showNotificationToast === 'function') {
            showNotificationToast('@TempData["SuccessMessage"]', 'success');
        }
        </text>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <text>
        if (typeof showNotificationToast === 'function') {
            showNotificationToast('@TempData["ErrorMessage"]', 'danger');
        }
        </text>
    }
</script>
</div>