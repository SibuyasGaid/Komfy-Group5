@model List<ASI.Basecode.Services.ServiceModels.UserModel>

@{
    ViewData["Title"] = "Users Management - KOZY";
}

<style>
    .kozy-user-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .kozy-user-title {
        font-size: 2rem;
        font-weight: 700;
        color: #2F3030;
    }

    .kozy-user-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .kozy-user-table {
        width: 100%;
        border-collapse: collapse;
    }

    .kozy-user-table thead {
        background: linear-gradient(135deg, #FF8223 0%, #FFA45F 100%);
        color: white;
    }

    .kozy-user-table thead th {
        padding: 1rem;
        text-align: left;
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .kozy-user-table tbody tr {
        border-bottom: 1px solid #E5E7EB;
        transition: all 0.2s ease;
    }

    .kozy-user-table tbody tr:hover {
        background-color: #F9FAFB;
    }

    .kozy-user-table tbody td {
        padding: 1rem;
        color: #2F3030;
    }

    .kozy-btn-user-action {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .kozy-btn-view {
        background: #68BEB2;
        color: white;
    }

    .kozy-btn-view:hover {
        background: #2A5C55;
        transform: translateY(-2px);
        color: white;
    }

    .kozy-btn-edit {
        background: #F59E0B;
        color: white;
    }

    .kozy-btn-edit:hover {
        background: #D97706;
        transform: translateY(-2px);
        color: white;
    }

    .kozy-btn-delete {
        background: #EF4444;
        color: white;
    }

    .kozy-btn-delete:hover {
        background: #DC2626;
        transform: translateY(-2px);
        color: white;
    }
</style>

<div class="animate-fade-in">
    <div class="kozy-user-header">
        <h1 class="kozy-user-title">
            <i class="fa-solid fa-users me-2"></i>Users Management
        </h1>
        <a asp-action="Create" class="kozy-btn-add">
            <i class="fa-solid fa-plus me-2"></i>Add New User
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 12px; border: none; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);">
            <i class="fa-solid fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 12px; border: none; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);">
            <i class="fa-solid fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="kozy-user-card">
        <div class="table-responsive">
            <table class="kozy-user-table">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            <tr style="@(user.IsUserActive ? "" : "opacity: 0.6; background-color: #F3F4F6;")">
                                <td><strong>@user.UserId</strong></td>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge" style="background: @(user.Role == "Admin" ? "#EF4444" : "#FF8223"); color: white; padding: 0.5rem 0.75rem; border-radius: 8px; font-size: 0.875rem;">
                                        @user.Role
                                    </span>
                                </td>
                                <td>
                                    <span class="badge" style="background: @(user.IsUserActive ? "#10B981" : "#EF4444"); color: white; padding: 0.5rem 0.75rem; border-radius: 8px; font-size: 0.875rem;">
                                        @(user.IsUserActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>@user.CreatedTime.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Details" asp-route-id="@user.UserId" class="kozy-btn-user-action kozy-btn-view" title="View Details">
                                            <i class="fa-solid fa-eye me-1"></i>View
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.UserId" class="kozy-btn-user-action kozy-btn-edit" title="Edit">
                                            <i class="fa-solid fa-edit me-1"></i>Edit
                                        </a>
                                        <button type="button" class="kozy-btn-user-action @(user.IsUserActive ? "kozy-btn-delete" : "kozy-btn-view")" data-toggle="modal" data-target="#toggleModal-@user.UserId" title="@(user.IsUserActive ? "Deactivate" : "Activate")">
                                            <i class="fa-solid fa-@(user.IsUserActive ? "ban" : "check-circle") me-1"></i>@(user.IsUserActive ? "Deactivate" : "Activate")
                                        </button>
                                    </div>
                                </td>
                            </tr>

                            <!-- Toggle Activation Confirmation Modal -->
                            <div class="modal fade" id="toggleModal-@user.UserId" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content" style="border-radius: 16px; border: none;">
                                        <div class="modal-header" style="background: linear-gradient(135deg, #FF8223 0%, #FFA45F 100%); color: white; border-radius: 16px 16px 0 0;">
                                            <h5 class="modal-title">Confirm @(user.IsUserActive ? "Deactivation" : "Activation")</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: white; opacity: 1;">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to @(user.IsUserActive ? "deactivate" : "activate") user <strong>@user.Name</strong>?</p>
                                            <p class="text-muted small">@(user.IsUserActive ? "The user will no longer be able to access the system." : "The user will be able to access the system again.")</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn" style="background: #C3C3C3; color: white; border-radius: 8px;" data-dismiss="modal">Cancel</button>
                                            <form asp-action="ToggleActivation" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@user.UserId" />
                                                <button type="submit" class="kozy-btn-user-action @(user.IsUserActive ? "kozy-btn-delete" : "kozy-btn-view")">@(user.IsUserActive ? "Deactivate" : "Activate")</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <i class="fa-solid fa-users" style="font-size: 3rem; color: #C3C3C3; margin-bottom: 1rem;"></i>
                                <p style="color: #6B7280;">No users found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Pagination *@
        @if (ViewBag.TotalPages > 1)
        {
            <div class="d-flex justify-content-between align-items-center p-3" style="border-top: 1px solid #E5E7EB;">
                <div class="text-muted">
                    Showing @((ViewBag.CurrentPage - 1) * 5 + 1) to @(Math.Min(ViewBag.CurrentPage * 5, ViewBag.TotalUsers)) of @ViewBag.TotalUsers users
                </div>
                <nav aria-label="User pagination">
                    <ul class="pagination mb-0">
                        @* Previous button *@
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })" style="color: #FF8223; border-color: #E5E7EB;">
                                <i class="fa-solid fa-chevron-left"></i>
                            </a>
                        </li>

                        @* Page numbers *@
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i })"
                                   style="@(i == ViewBag.CurrentPage ? "background: linear-gradient(135deg, #FF8223 0%, #FFA45F 100%); border-color: #FF8223; color: white;" : "color: #FF8223; border-color: #E5E7EB;")">
                                    @i
                                </a>
                            </li>
                        }

                        @* Next button *@
                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })" style="color: #FF8223; border-color: #E5E7EB;">
                                <i class="fa-solid fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<script>
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
        if (typeof showNotificationToast !== 'undefined') {
            showNotificationToast('@TempData["SuccessMessage"]', 'success');
        }
        </text>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <text>
        if (typeof showNotificationToast !== 'undefined') {
            showNotificationToast('@TempData["ErrorMessage"]', 'danger');
        }
        </text>
    }
</script>
