    "CookieName": "tkn",
    "ExpirationMinutes": "120"
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": "587",
    "SmtpUsername": "your-email@gmail.com",
    "SmtpPassword": "your-app-password-here",
    "FromEmail": "your-email@gmail.com",
    "FromName": "Komfy Library",
    "EnableSsl": "true"
  }
